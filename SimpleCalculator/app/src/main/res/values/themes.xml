<resources>
    <!-- Base application theme -->
    <style name="Theme.SimpleCalculator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">#6200EE</item>
        <item name="colorPrimaryVariant">#3700B3</item>
        <item name="colorOnPrimary">#FFFFAA</item>
        <item name="colorSecondary">#03DAC5</item>
        <item name="colorSecondaryVariant">#018786</item>
        <item name="colorOnSecondary">#000000</item>
        <item name="android:statusBarColor">#3700B3</item>
    </style>

    <!-- Additional unique styles -->
    <style name="CalcButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:backgroundTint">#6200EE</item>
        <item name="android:textColor">#FFBBFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="ResultTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">32sp</item>
        <item name="android:gravity">end</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">#EDEDED</item>
        <item name="android:textColor">#000000</item>
    </style>
</resources>
