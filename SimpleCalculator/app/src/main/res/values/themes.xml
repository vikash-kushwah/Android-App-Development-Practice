<resources>
    <!-- Base application theme -->
    <style name="Theme.SimpleCalculator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">#6200EE</item>
        <item name="colorPrimaryVariant">#3700B3</item>
        <item name="colorOnPrimary">#FFFFAA</item>
        <item name="colorSecondary">#03DAC5</item>
        <item name="colorSecondaryVariant">#018786</item>
        <item name="colorOnSecondary">#000000</item>
        <item name="android:statusBarColor">#3700B3</item>
    </style>

    <!-- Additional unique styles -->
    <style name="CalcButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:backgroundTint">#6200EE</item>
        <item name="android:textColor">#FFBBFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="ResultTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">48sp</item>
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:padding">24dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">@color/result_background</item>
        <item name="android:textColor">@color/result_text</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="OperationTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:padding">8dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">#666666</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
</resources>
